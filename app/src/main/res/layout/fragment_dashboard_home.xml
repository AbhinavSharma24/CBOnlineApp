<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_large"
    android:paddingBottom="@dimen/margin_large"
    tools:context="com.codingblocks.cbonlineapp.dashboard.home.DashboardHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_large"
        android:paddingEnd="@dimen/margin_large">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/homeCourseLogoImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_medium"
            android:src="@drawable/ic_course_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/progressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="@string/course_progress"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/homeProgressTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/orangish"
                    android:textSize="18sp"
                    tools:text="100%" />

            </LinearLayout>

            <com.skydoves.progressview.ProgressView
                android:id="@+id/homeProgressView"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="@dimen/margin_extra_small"
                app:progressView_autoAnimate="true"
                app:progressView_colorBackground="@color/veryLightPink"
                app:progressView_colorGradientEnd="@color/dusty_orange"
                app:progressView_colorGradientStart="@color/pastel_red"
                app:progressView_max="100"
                app:progressView_progress="40"
                app:progressView_radius="10dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:fontFamily="@font/gilroy_bold"
        android:text="@string/your_performance"
        android:textSize="18sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="@dimen/margin_large"
            android:paddingTop="@dimen/margin_medium_small"
            android:paddingEnd="@dimen/margin_large"
            android:paddingBottom="@dimen/margin_medium_small">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:minWidth="160dp"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:id="@+id/performanceImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_performance" />

                    <TextView
                        android:id="@+id/homePerformanceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/performanceImg"
                        android:fontFamily="@font/gilroy_bold"
                        tools:text="Average"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/homePerformanceTv"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="@string/your_performance"
                        android:textSize="14sp" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:minWidth="160dp"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:id="@+id/leaderboardImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_leaderboard" />

                    <TextView
                        android:id="@+id/homeleaderboardTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/leaderboardImg"
                        android:fontFamily="@font/gilroy_bold"
                        tools:text="233/450"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/homeleaderboardTv"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="@string/leaderboard_rank"
                        android:textSize="14sp" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


